<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- RMI Client Declarations -->
	
    <bean id="LicenseCoreService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        
        <!-- serviceUrl represents RMI Service Url called-->
	    <property name="serviceUrl" value="rmi://localhost:1099/LicenseCoreService"/>
	    
	    <!-- serviceInterface represents RMI Service Interface called -->
	    <property name="serviceInterface" value="de.ityx.licensing.api.LicenseCoreService"/>
		
		<!-- refreshStubOnConnectFailure enforces automatic re-lookup of the stub if a call fails with a connect exception -->
	    <property name="refreshStubOnConnectFailure" value="true"/>
	</bean>
	
	 
</beans>
