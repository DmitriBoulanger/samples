<project>
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>de.dbo.samples.basic.1.maven.test</groupId>
  <artifactId>08_Mojo-Properties-Test</artifactId>
  <version>0.0.0-SNAPSHOT</version>
  
  <build>
    <plugins>
      
      
      
      			<plugin>
				<groupId>de.dbo.samples.basic.1.maven</groupId>
				<artifactId>08_Mojo-Properties</artifactId>
				<version>0.0.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>read-properties</id>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
				  	<prefix>+++</prefix>
          			<datetimePattern>HH:mm:ss</datetimePattern>
					<filePaths>
						<filePath>versions.properties</filePath>
					</filePaths>
					<files>
						<file>versions.properties</file>
					</files>
				</configuration>
				<dependencies>

<!-- Any jars that host the required properties files here -->
    
					<dependency>
						<groupId>de.dbo.samples.basic.1.maven</groupId>
						<artifactId>08_Mojo-PropertiesContainer</artifactId>
						<version>0.0.0-SNAPSHOT</version>
					</dependency>
					
					
				</dependencies>
			</plugin>
    </plugins>
  </build>
</project>