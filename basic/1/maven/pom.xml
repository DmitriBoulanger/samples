<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.dbo.samples.basic.1</groupId>
		<artifactId>1</artifactId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>maven</artifactId>
	<groupId>de.dbo.samples.basic.1.maven</groupId>
	<packaging>pom</packaging>
	<name>Samples Basic-1 Maven</name>

	<url>http://books.sonatype.com/mvnex-book/reference/index.html</url>

	<modules>
		<module>00_Simple</module>
		<module>03_Multi</module>
		<module>04_Profile</module>
		<module>05_Properties</module>
		<module>06_Enterprise</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>

				<!--Jetty Server with Log4j and its configuration -->
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>maven-jetty-plugin</artifactId>
					<dependencies>
						<dependency>
							<groupId>de.dbo.samples.basic.1</groupId>
							<artifactId>_logger</artifactId>
							<version>${project.version}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>de.dbo.mvn</groupId>
				<artifactId>mvn-properties-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<id>read-resource-properties</id>
						<phase>initialize</phase>
						<goals>
							<goal>read-resource-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<resourceNames>
						<resourceName>versions.properties</resourceName>
					</resourceNames>
				</configuration>
				<!-- JAR hosting versions-properties -->
				<dependencies>
					<dependency>
						<groupId>de.dbo</groupId>
						<artifactId>versions</artifactId>
						<type>jar</type>
						<version>0.0.0-SNAPSHOT</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>

	</build>

</project>