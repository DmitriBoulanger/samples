<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>de.dbo.samples.basic.1</groupId>
		<artifactId>1</artifactId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>maven</artifactId>
	<packaging>pom</packaging>
	<name>Samples Basic 1 Maven basic use cases</name>
	<url>http://books.sonatype.com/mvnex-book/reference/index.html</url>

	<modules>
		<module>00_Simple</module>
		<module>01_Custom</module>
		<module>02_Web</module>
		<module>03_Multi</module>
		<module>04_Profile</module>
		<module>05_Properties</module>
		<module>06_Enterprise</module>
		<module>07_Mojo</module>
	</modules>

	<build>
	    <finalName>samples-maven-${project.artifactId}-${project.version}</finalName>
		<pluginManagement>
			<plugins>
				

				<!-- MAVEN Plugins -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.16</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-enforcer-plugin</artifactId>
					<version>1.3.1</version>
				</plugin>

				<!-- SPECIAL Plugins -->
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>maven-jetty-plugin</artifactId>
					<version>6.1.25</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>hibernate3-maven-plugin</artifactId>
					<version>2.1</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<!-- Plug-ins for all -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
		</plugins>

	</build>

	<dependencyManagement>
		<dependencies>
		

			<!-- SPECIAL -->

			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring</artifactId>
				<version>2.0.7</version>
			</dependency>

			<dependency>
				<groupId>hsqldb</groupId>
				<artifactId>hsqldb</artifactId>
				<version>1.8.0.7</version>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<!-- Dependencies for all -->
	<dependencies>
		

	</dependencies>

</project>